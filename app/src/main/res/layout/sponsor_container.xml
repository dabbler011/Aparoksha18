<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/sponsorLayout"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sponsorImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/sponsorName"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sponsorImage"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/sponsorImage"
        android:textColor="@android:color/white"
        android:text="Sponsor's Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sponsorCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sponsorName"
        android:layout_below="@+id/sponsorName"
        android:text="categories"
        android:textSize="16sp" />

</RelativeLayout>